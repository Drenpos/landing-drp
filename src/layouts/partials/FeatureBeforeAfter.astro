---
import { Icon } from "astro-icon/components";
---

<section class="section pt-0">
  <div class="container">
    <!-- Título principal -->
    <div class="section-title mb-12">
      <div class="col-10 xl:col-8" data-aos="fade-up-sm">
        <p
          class="text-primary bg-primary/10 px-[10px] py-1 inline-block rounded-full uppercase text-sm"
        >
          Antes / Después
        </p>
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold my-5">
          De esto... a esto
        </h2>
      </div>
    </div>

    <!-- Contenedor principal con diseño solapado -->
    <div
      class="relative max-w-6xl mx-auto"
      data-aos="fade-up"
      data-aos-delay="200"
    >
      <!-- Diseño Desktop: Imágenes solapadas -->
      <div class="hidden lg:block relative">
        <!-- Imagen ANTES (izquierda, al fondo) -->
        <div class="relative w-[55%]">
          <div class="relative group">
            <!-- Badge ANTES -->
            <div
              class="absolute -top-3 left-6 z-10 bg-dark text-white px-4 py-1.5 rounded-full text-sm font-bold shadow-lg"
            >
              ANTES
            </div>

            <!-- Imagen con overlay oscuro -->
            <div class="relative rounded-2xl overflow-hidden shadow-2xl">
              <img
                src="/images/user_before.jpg"
                alt="El caos de trabajar con múltiples programas"
                class="w-full h-auto"
              />
              <div
                class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"
              >
              </div>
            </div>

            <!-- Lista de problemas sobre la imagen -->
            <div class="absolute bottom-6 left-6 right-6 space-y-2">
              <div
                class="flex items-center gap-2 text-white/90 text-sm backdrop-blur-sm bg-black/30 px-3 py-2 rounded-lg"
              >
                <span class="text-red-400">✗</span>
                <span>Varios Excel desactualizados</span>
              </div>
              <div
                class="flex items-center gap-2 text-white/90 text-sm backdrop-blur-sm bg-black/30 px-3 py-2 rounded-lg"
              >
                <span class="text-red-400">✗</span>
                <span>Programas que no hablan entre sí</span>
              </div>
              <div
                class="flex items-center gap-2 text-white/90 text-sm backdrop-blur-sm bg-black/30 px-3 py-2 rounded-lg"
              >
                <span class="text-red-400">✗</span>
                <span>Datos duplicados por todos lados</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Imagen DESPUÉS (derecha, al frente) -->
        <div class="absolute top-12 right-0 w-[55%] z-10">
          <div class="relative group">
            <!-- Badge DESPUÉS -->
            <div
              class="absolute -top-3 right-6 z-10 bg-primary text-white px-4 py-1.5 rounded-full text-sm font-bold shadow-lg"
            >
              DESPUÉS
            </div>

            <!-- Imagen luminosa -->
            <div
              class="relative rounded-2xl overflow-hidden shadow-2xl border-4 border-white"
            >
              <img
                src="/images/user_after.png"
                alt="Equipo feliz usando Drenpos"
                class="w-full h-auto"
              />
              <div
                class="absolute inset-0 bg-gradient-to-t from-primary/10 via-transparent to-transparent"
              >
              </div>
            </div>

            <!-- Lista de beneficios sobre la imagen -->
            <div class="absolute bottom-6 left-6 right-6 space-y-2">
              <div
                class="flex items-center gap-2 text-dark text-sm backdrop-blur-md bg-white/90 px-3 py-2 rounded-lg shadow-md"
              >
                <span class="text-green-600">✓</span>
                <span class="font-medium">Una sola fuente de verdad</span>
              </div>
              <div
                class="flex items-center gap-2 text-dark text-sm backdrop-blur-md bg-white/90 px-3 py-2 rounded-lg shadow-md"
              >
                <span class="text-green-600">✓</span>
                <span class="font-medium">Todo actualizado en tiempo real</span>
              </div>
              <div
                class="flex items-center gap-2 text-dark text-sm backdrop-blur-md bg-white/90 px-3 py-2 rounded-lg shadow-md"
              >
                <span class="text-green-600">✓</span>
                <span class="font-medium">Decisiones con datos fiables</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Flecha de transformación -->
        <div
          class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 z-[5]"
        >
          <div class="relative">
            <div class="absolute inset-0 bg-primary/20 rounded-full blur-xl">
            </div>
            <div
              class="relative bg-white border-4 border-primary rounded-full w-16 h-16 flex items-center justify-center shadow-xl"
            >
              <Icon name="arrowRight" class="w-7 h-7 text-primary" />
            </div>
          </div>
        </div>
      </div>

      <!-- Diseño Mobile: Stack vertical -->
      <div class="lg:hidden space-y-8">
        <!-- ANTES -->
        <div class="relative" data-aos="fade-up" data-aos-delay="100">
          <div class="relative">
            <!-- Badge ANTES -->
            <div
              class="absolute -top-3 left-4 z-10 bg-dark text-white px-4 py-1.5 rounded-full text-sm font-bold shadow-lg"
            >
              ANTES
            </div>

            <!-- Imagen -->
            <div class="relative rounded-2xl overflow-hidden shadow-xl">
              <img
                src="/images/user_before.jpg"
                alt="El caos de trabajar con múltiples programas"
                class="w-full h-auto"
              />
              <div
                class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/30 to-transparent"
              >
              </div>

              <!-- Lista de problemas -->
              <div class="absolute bottom-4 left-4 right-4 space-y-2">
                <div
                  class="flex items-center gap-2 text-white text-sm backdrop-blur-sm bg-black/40 px-3 py-2 rounded-lg"
                >
                  <span class="text-red-400">✗</span>
                  <span>Excel desactualizados</span>
                </div>
                <div
                  class="flex items-center gap-2 text-white text-sm backdrop-blur-sm bg-black/40 px-3 py-2 rounded-lg"
                >
                  <span class="text-red-400">✗</span>
                  <span>Programas desconectados</span>
                </div>
                <div
                  class="flex items-center gap-2 text-white text-sm backdrop-blur-sm bg-black/40 px-3 py-2 rounded-lg"
                >
                  <span class="text-red-400">✗</span>
                  <span>Datos duplicados</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Flecha de transición móvil -->
        <div
          class="flex justify-center -my-4"
          data-aos="zoom-in"
          data-aos-delay="200"
        >
          <div
            class="bg-white border-4 border-primary rounded-full w-14 h-14 flex items-center justify-center shadow-lg transform rotate-90"
          >
            <Icon name="arrowRight" class="w-6 h-6 text-primary" />
          </div>
        </div>

        <!-- DESPUÉS -->
        <div class="relative" data-aos="fade-up" data-aos-delay="300">
          <div class="relative">
            <!-- Badge DESPUÉS -->
            <div
              class="absolute -top-3 right-4 z-10 bg-primary text-white px-4 py-1.5 rounded-full text-sm font-bold shadow-lg"
            >
              DESPUÉS
            </div>

            <!-- Imagen -->
            <div
              class="relative rounded-2xl overflow-hidden shadow-xl border-4 border-white"
            >
              <img
                src="/images/user_after.png"
                alt="Equipo feliz usando Drenpos"
                class="w-full h-auto"
              />
              <div
                class="absolute inset-0 bg-gradient-to-t from-primary/10 via-transparent to-transparent"
              >
              </div>

              <!-- Lista de beneficios -->
              <div class="absolute bottom-4 left-4 right-4 space-y-2">
                <div
                  class="flex items-center gap-2 text-dark text-sm backdrop-blur-md bg-white/95 px-3 py-2 rounded-lg shadow-md"
                >
                  <span class="text-green-600">✓</span>
                  <span class="font-medium">Una fuente de verdad</span>
                </div>
                <div
                  class="flex items-center gap-2 text-dark text-sm backdrop-blur-md bg-white/95 px-3 py-2 rounded-lg shadow-md"
                >
                  <span class="text-green-600">✓</span>
                  <span class="font-medium">Actualizado en tiempo real</span>
                </div>
                <div
                  class="flex items-center gap-2 text-dark text-sm backdrop-blur-md bg-white/95 px-3 py-2 rounded-lg shadow-md"
                >
                  <span class="text-green-600">✓</span>
                  <span class="font-medium">Datos fiables</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Texto conclusión -->
    <div
      class="text-center mt-16 lg:mt-24"
      data-aos="fade-up"
      data-aos-delay="400"
    >
      <p
        class="text-lg md:text-xl lg:text-2xl font-medium text-dark/80 max-w-3xl mx-auto"
      >
        Pasas de perseguir datos a tenerlos siempre listos para decidir.
      </p>
    </div>
  </div>
</section>

<style>
  /* Efecto hover sutil en desktop */
  @media (min-width: 1024px) {
    .group:hover img {
      transform: scale(1.02);
      transition: transform 0.6s ease;
    }
  }
</style>
