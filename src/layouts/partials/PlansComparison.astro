---
import { markdownify } from "@/lib/utils/textConverter";
import type { CollectionEntry } from "astro:content";
import { getEntry } from "astro:content";
import DynamicIcon from "@/helpers/DynamicIcon";

const comparisonData = (await getEntry(
  "plansComparison",
  "plans-comparison",
)) as CollectionEntry<"plansComparison">;

const { title, badge, description, plans, features, modules, notes } =
  comparisonData.data;

const { isSection = true }: { isSection?: boolean } = Astro.props;

// Función helper para renderizar el valor de la celda
function renderCellValue(value: boolean | number | string) {
  if (typeof value === "boolean") {
    return value;
  }
  if (typeof value === "number") {
    return value;
  }
  return value; // string
}
---

{
  (
    <section class={`${isSection ? "section pt-0" : ""}`}>
      <div class="container">
        <div class="row">
          <div class="section-title">
            <div class="col-10 xl:col-8" data-aos="fade-up-sm">
              <p set:html={markdownify(badge)} />
              <h2 set:html={markdownify(title)} />
              <p set:html={markdownify(description)} />
            </div>
          </div>

          {/* Vista Desktop: Tabla completa */}
          <div class="col-12 hidden md:block" data-aos="fade-up-sm">
            <div class="overflow-x-auto">
              <div class="bg-body border border-dark/10 rounded-3xl overflow-hidden">
                <table class="w-full comparison-table">
                  <thead class="bg-light border-b border-dark/10">
                    <tr>
                      <th class="text-left px-6 py-4 font-semibold text-text-dark w-1/3">
                        Características
                      </th>
                      {plans.map((plan) => (
                        <th class="text-center px-6 py-4 font-semibold text-text-dark">
                          {plan.name}
                        </th>
                      ))}
                    </tr>
                  </thead>
                  <tbody>
                    {/* Características generales */}
                    {features.map((section, sectionIdx) => (
                      <>
                        <tr class="bg-light/50">
                          <td
                            colspan={plans.length + 1}
                            class="px-6 py-3 font-semibold text-sm uppercase tracking-wide text-text-dark"
                          >
                            {section.category}
                          </td>
                        </tr>
                        {section.items.map((item, itemIdx) => (
                          <tr
                            class={`border-b border-dark/10 last:border-0 hover:bg-light/30 transition-colors ${itemIdx % 2 === 0 ? "" : "bg-light/10"}`}
                          >
                            <td class="px-6 py-4 text-text/80">{item.name}</td>
                            <td class="px-6 py-4 text-center">
                              {typeof item.financiero === "boolean" ? (
                                item.financiero ? (
                                  <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-primary/10 text-primary">
                                    <DynamicIcon icon={"FaCheck"} />
                                  </span>
                                ) : (
                                  <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-dark/5 text-text/30">
                                    <DynamicIcon icon={"FaXmark"} />
                                  </span>
                                )
                              ) : (
                                <span class="font-semibold text-text-dark">
                                  {item.financiero}
                                </span>
                              )}
                            </td>
                            <td class="px-6 py-4 text-center">
                              {typeof item.pyme === "boolean" ? (
                                item.pyme ? (
                                  <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-primary/10 text-primary">
                                    <DynamicIcon icon={"FaCheck"} />
                                  </span>
                                ) : (
                                  <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-dark/5 text-text/30">
                                    <DynamicIcon icon={"FaXmark"} />
                                  </span>
                                )
                              ) : (
                                <span class="font-semibold text-text-dark">
                                  {item.pyme}
                                </span>
                              )}
                            </td>
                          </tr>
                        ))}
                      </>
                    ))}

                    {/* Módulos incluidos */}
                    {modules.map((section, sectionIdx) => (
                      <>
                        <tr class="bg-light/50">
                          <td
                            colspan={plans.length + 1}
                            class="px-6 py-3 font-semibold text-sm uppercase tracking-wide text-text-dark"
                          >
                            {section.category}
                          </td>
                        </tr>
                        {section.items.map((item, itemIdx) => (
                          <tr
                            class={`border-b border-dark/10 last:border-0 hover:bg-light/30 transition-colors ${itemIdx % 2 === 0 ? "" : "bg-light/10"}`}
                          >
                            <td class="px-6 py-4 text-text/80">{item.name}</td>
                            <td class="px-6 py-4 text-center">
                              {typeof item.financiero === "boolean" ? (
                                item.financiero ? (
                                  <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-primary/10 text-primary">
                                    <DynamicIcon icon={"FaCheck"} />
                                  </span>
                                ) : (
                                  <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-dark/5 text-text/30">
                                    <DynamicIcon icon={"FaXmark"} />
                                  </span>
                                )
                              ) : (
                                <span class="font-semibold text-text-dark text-sm">
                                  {item.financiero}
                                </span>
                              )}
                            </td>
                            <td class="px-6 py-4 text-center">
                              {typeof item.pyme === "boolean" ? (
                                item.pyme ? (
                                  <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-primary/10 text-primary">
                                    <DynamicIcon icon={"FaCheck"} />
                                  </span>
                                ) : (
                                  <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-dark/5 text-text/30">
                                    <DynamicIcon icon={"FaXmark"} />
                                  </span>
                                )
                              ) : (
                                <span class="font-semibold text-text-dark text-sm">
                                  {item.pyme}
                                </span>
                              )}
                            </td>
                          </tr>
                        ))}
                      </>
                    ))}
                  </tbody>
                </table>
              </div>
            </div>
          </div>

          {/* Vista móvil: Tarjetas por plan */}
          <div class="col-12 md:hidden">
            <div class="grid gap-6">
              {plans.map((plan, planIdx) => (
                <div
                  class="bg-body border border-dark/10 rounded-3xl overflow-hidden"
                  data-aos="fade-up-sm"
                  data-aos-delay={100 + planIdx * 100}
                >
                  {/* Header del plan */}
                  <div class="bg-primary/5 border-b border-dark/10 px-5 py-4">
                    <h4 class="font-semibold text-text-dark text-lg">
                      {plan.name}
                    </h4>
                  </div>

                  {/* Características generales */}
                  <div class="p-5">
                    {features.map((section) => (
                      <div class="mb-6 last:mb-0">
                        <h5 class="font-semibold text-sm uppercase tracking-wide text-text-dark mb-3">
                          {section.category}
                        </h5>
                        <ul class="space-y-2">
                          {section.items.map((item) => {
                            const value =
                              plan.id === "financiero"
                                ? item.financiero
                                : item.pyme;
                            return (
                              <li class="flex items-center justify-between text-sm py-2 border-b border-dark/5 last:border-0">
                                <span class="text-text/70">{item.name}</span>
                                {typeof value === "boolean" ? (
                                  value ? (
                                    <span class="inline-flex items-center justify-center w-6 h-6 rounded-full bg-primary/10 text-primary text-xs">
                                      <DynamicIcon icon={"FaCheck"} />
                                    </span>
                                  ) : (
                                    <span class="inline-flex items-center justify-center w-6 h-6 rounded-full bg-dark/5 text-text/30 text-xs">
                                      <DynamicIcon icon={"FaXmark"} />
                                    </span>
                                  )
                                ) : (
                                  <span class="font-semibold text-text-dark">
                                    {value}
                                  </span>
                                )}
                              </li>
                            );
                          })}
                        </ul>
                      </div>
                    ))}

                    {/* Módulos */}
                    {modules.map((section) => (
                      <div class="mb-6 last:mb-0">
                        <h5 class="font-semibold text-sm uppercase tracking-wide text-text-dark mb-3">
                          {section.category}
                        </h5>
                        <ul class="space-y-2">
                          {section.items.map((item) => {
                            const value =
                              plan.id === "financiero"
                                ? item.financiero
                                : item.pyme;
                            return (
                              <li class="flex items-center justify-between text-sm py-2 border-b border-dark/5 last:border-0">
                                <span class="text-text/70">{item.name}</span>
                                {typeof value === "boolean" ? (
                                  value ? (
                                    <span class="inline-flex items-center justify-center w-6 h-6 rounded-full bg-primary/10 text-primary text-xs">
                                      <DynamicIcon icon={"FaCheck"} />
                                    </span>
                                  ) : (
                                    <span class="inline-flex items-center justify-center w-6 h-6 rounded-full bg-dark/5 text-text/30 text-xs">
                                      <DynamicIcon icon={"FaXmark"} />
                                    </span>
                                  )
                                ) : (
                                  <span class="font-semibold text-text-dark text-xs">
                                    {value}
                                  </span>
                                )}
                              </li>
                            );
                          })}
                        </ul>
                      </div>
                    ))}
                  </div>
                </div>
              ))}
            </div>
          </div>

          {/* Notas al pie */}
          {notes && notes.length > 0 && (
            <div class="col-12 mt-8" data-aos="fade-up-sm">
              <div class="bg-light/50 border border-dark/10 rounded-2xl p-6">
                <ul class="space-y-2">
                  {notes.map((note) => (
                    <li class="text-sm text-text/70 flex items-start gap-2">
                      <span class="text-primary mt-0.5 flex-shrink-0">
                        <DynamicIcon icon={"FaCircleInfo"} />
                      </span>
                      <span>{note}</span>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          )}
        </div>
      </div>
    </section>
  )
}
