---
import FeatureCard from "@/components/FeatureCard.astro";
import Base from "@/layouts/Base.astro";
import { getSinglePage } from "@/lib/contentParser.astro";
import CallToAction from "@/partials/CallToAction.astro";
import PageHeader from "@/partials/PageHeader.astro";
import StandoutSection from "@/partials/StandoutSection.astro";
import type { CollectionEntry } from "astro:content";
import { getEntry } from "astro:content";

const FEATURE_FOLDER = "features";

const featureIndex = (await getEntry(
  FEATURE_FOLDER,
  "-index"
)) as CollectionEntry<"features">;

const features = await getSinglePage(FEATURE_FOLDER);
---

<Base
  title={featureIndex.data.title}
  meta_title={featureIndex.data.meta_title}
  image={featureIndex.data.image}
  description={featureIndex.data.description}
>
  {
    featureIndex.data.hero && (
      <PageHeader
        title={featureIndex.data.hero.title}
        description={featureIndex.data.hero.description}
      />
    )
  }
  <section class="section-up">
    <div class="container">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-5">
        {
          features.map((feature) => (
            <div class="feature-card-bgcolor max-w-[450px] md:max-w-full mx-auto">
              <FeatureCard data={feature} />
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <StandoutSection />
  <CallToAction />
</Base>
