---
import Base from "@/layouts/Base.astro";
import CallToAction from "@/partials/CallToAction.astro";
import PageHeader from "@/partials/PageHeader.astro";
import { getEntry, render } from "astro:content";

const { regular } = Astro.params;
const page = await getEntry("pages", regular as string);

if (!page) {
  return Astro.redirect("/404");
}

const { title, meta_title, description, image, hero } = page.data;
const { Content } = await render(page);
---

<Base
  title={title}
  meta_title={meta_title}
  description={description}
  image={image}
>
  <PageHeader
    title={hero?.title || title}
    description={hero?.description || description}
    hasSmallHeight={"h-[600px]"}
  />
  <section class="section-up">
    <div class="container">
      <div class="row justify-center">
        <div class="lg:col-10">
          <div
            class="content bg-body p-5 first:rounded-t-[30px]"
            data-aos="fade-up-sm"
            data-aos-delay="200"
          >
            <Content />
          </div>
        </div>
      </div>
    </div>
  </section>

  <CallToAction />
</Base>
